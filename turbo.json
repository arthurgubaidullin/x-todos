{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "passThroughEnv": ["CARGO_HOME", "RUSTUP_HOME"],
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "pkg"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "lint": {
      "dependsOn": ["build"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
